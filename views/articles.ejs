<!doctype html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title[lang] %></title>
    <meta name="description" content="<%= description[lang] %>">
    <link rel="shortcut icon" type="image/x-icon" href="<%= url %>/public/static/images/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="<%= url %>/public/static/css/reset.css">
    <link rel="stylesheet" href="<%= url %>/public/static/css/index.css">
</head>
<body>
<div class="container articles-page">
    <div class="header-container">
        <div class="header">
            <div class="logo-container">
                <a class="logo" href="<%= url %>/<%= lang %>/guides">
                    <img src="<%= url %>/public/static/images/lolguides-logo3.png" alt="logo">
                </a>
            </div>
            <div class="search-container">
                <div class="search-input-wrapper"> 
                    <input class="search-input" type="text" placeholder="<%= i18n.header.search[lang] %>">
                    <input class="search-input-mobile" type="text" placeholder="<%= i18n.header.searchMobile[lang] %>">
                </div>
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        <div class="content">
            <h1 class="page-title">
                <%= title[lang] %>
            </h1>
            <div class="articles-container">
                <% for(const article of articles) {%>
                    <a href="<%= url %>/<%= lang %>/guides/<%= article.slug %>" class="article-item">
                        <div class="article-bg" style="background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= url %>/<%= article.imageUrl.replace(/\\/g, "/") %>)">
                        </div>
                        <div class="article-title">
                            <h2><%= article.headerTitle[lang] %></h2>
                        </div>
                    </a>      
                <% } %>
            </div>
        </div>
    </div>
</div>
<div id="url" style="display: none;" data=<%= url %>></div>
<div id="lang" style="display: none;" data=<%= lang %>></div>
<!-- Local copy -->
<script src="<%= url %>/public/static/js/popper.min.js"></script>
<script src="<%= url %>/public/static/js/tippy-bundle.umd.js"></script>

<!-- Development -->
<!--<script src="https://unpkg.com/@popperjs/core@2/dist/umd/popper.min.js"></script>-->
<!--<script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js"></script>-->

<!-- Production -->
<!-- <script src="https://unpkg.com/@popperjs/core@2"></script>-->
<!-- <script src="https://unpkg.com/tippy.js@6"></script>-->
<script src="<%= url %>/public/static/js/script.js"></script>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-FQFTHLLC6J"></script>
<script async src="<%= url %>/public/static/js/gtag.js"></script>
</body>
</html>
